.post-container {
    display: flex;
    flex-direction: column;
    margin-top: 20rpx;
    margin-bottom: 40rpx;
    background-color: #fff;
    border-bottom: 1px solid #ededed;
    border-top: 1px solid #ededed;
    padding-bottom: 5px;
    margin: 0 auto;
    width: 90%;
}

.post-author {
    width: 60rpx;
    height: 60rpx;
    vertical-align: middle;
}

.post-data {
    margin-left: 20rpx;
    vertical-align: middle;
    margin-bottom: 5px;
    font-size: 26rpx;
}

.post-title {
    font-size: 30rpx;
    font-weight: 600;
    color: #333;
    margin-bottom: 10px;
    margin-left: 10px;
}

.post-image {
    width: 100%;
    height: 380rpx;
    margin-bottom: 10pxï¼›;
}

.post-content {
    font-size: 28rpx;
    color: #666;
    margin: 0 0 20rpx 20rpx;
    line-height: 40rpx;
    letter-spacing: 2rpx;
}

.post-like {
    font-size: 13px;
    flex-direction: row;
    line-height: 16px;
    margin-left: 10px;
}

.post-like-image {
    width: 16px;
    height: 16px;
    margin-right: 8px;
    vertical-align: middle;
}

.post-like-font {
    vertical-align: middle;
    margin-right: 20px;
}
