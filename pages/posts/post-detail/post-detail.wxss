.container {
  display: flex;
  flex-direction: column;
}

.head-image {
  width: 100%;
  height: 460rpx;
}
.audio{
  position: absolute;
  width: 102rpx;
  height: 110rpx;
  margin: 30% 45%;
}

.author-date {
  flex-direction: row;
  margin-left: 30rpx;
  margin-top: 20rpx;
}

.avatar {
  width: 64rpx;
  height: 64rpx;
  margin-left: 20rpx;
}

.author {
  font-size: 30rpx;
  font-weight: 300;
  margin-left: 20rpx;
  color: #666;
}

.const-text {
  font-size: 24rpx;
  color: #999;
  margin-left: 20rpx;
}

.date {
  font-size: 24rpx;
  margin-left: 30rpx;
  color: #999;
  vertical-align: middle;
}

.title {
  font-size: 36rpx;
  font-weight: 700;
  margin-top: 30rpx;
  margin-left: 30rpx;
  letter-spacing: 2px;
  color: #4b556c;
}
.tool{
  margin-top: 20rpx;
}
.circle-img{
  float: right;
  margin-right: 40rpx;
  vertical-align: middle;
}
.circle-img image{
  width: 90rpx;
  height: 90rpx;
  margin-left: 30rpx;
}
share-img{
  margin-left: 30rpx;
}
.horizon{
  background-color:#4b556c;
  width: 660rpx;
  height: 5rpx;
  position: relative;
  top: 40rpx;
  margin: 0 auto;
  z-index: -10;
}
.detail{
  color: #666;
  font-size: 30rpx;
  margin-left: 30rpx;
  margin-top: 20rpx;
  line-height: 44rpx;
  letter-spacing: 2px;
  margin-right: 2px;
}